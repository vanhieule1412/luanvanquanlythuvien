<Window x:Class="QuanLyThuVien.GiaoDien.DanhSachPhieuMuonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyThuVien.GiaoDien"
        mc:Ignorable="d"
        Title="DanhSachPhieuMuonWindow" Height="450" Width="600"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"        
        >
    <StackPanel>
        <Button Content="Lập Phiếu Mượn" Name="btnlap" Click="Btnlap_Click"/>
        <GroupBox Header="Danh sách phiếu mượn">
            <DataGrid Name="dgphieumuon" AutoGenerateColumns="False" Height="230" LoadingRowDetails="Dgphieumuon_LoadingRowDetails" SelectedValuePath="MaPhieuMuon" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã phiếu mượn" Binding="{Binding MaPhieuMuon}"/>
                    <DataGridTextColumn Header="Ngày mượn" Binding="{Binding NgayMuon,StringFormat='dd/MM/yyyy'}"/>
                    <DataGridTextColumn Header="Ngày trả" Binding="{Binding NgayTra,StringFormat='dd/MM/yyyy'}"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai }"/>
                    <DataGridTextColumn Header="Tiền phạt" Binding="{Binding TienPhat}"/>
                    <DataGridTextColumn Header="Mã thủ thư" Binding="{Binding MaThuThu}"/>
                    <DataGridTextColumn Header="Tên thủ thư" Binding="{Binding THUTHU.TenThuThu}" />
                    <DataGridTextColumn Header="Mã độc giả" Binding="{Binding MaDocGia}"/>
                    <DataGridTextColumn Header="Tên độc giả" Binding="{Binding DOCGIA.TenDocGia}"/>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Sửa" Name="btnSua" Click="BtnSua_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <Expander>
                            <StackPanel>
                                <DataGrid Name="dgsachphieumuon" AutoGenerateColumns="False" >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Mã Sách" Binding="{Binding MaSach}"/>
                                        <DataGridTextColumn Header="Tên Sách" Binding="{Binding TenSach}"/>
                                        <DataGridTextColumn Header="Tác giả" Binding="{Binding TacGia}"/>
                                        <DataGridTextColumn Header="Người dịch" Binding="{Binding NguoiDich}"/>
                                        <DataGridTextColumn Header="Số lượng sách mượn" Binding="{Binding SoLuongSachMuon}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                </Grid>

                            </StackPanel>
                        </Expander>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>

            </DataGrid>
        </GroupBox>
    </StackPanel>
</Window>
